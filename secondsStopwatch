#include<stdio.h>
#include<stdlib.h>
#include<unistd.h>
void main(){
  short hour=0,minute=0,second=0;
  while(1){
    system("cls"); //Use clear for Linux
    printf("%x : %x : %x ",hour,minute,second);
    second++;
    if(second==60){
      minute+=1;second=0;
    }
    if(minute==60){
      hour+=1;minute=0;
    }
    if(hour==24){
      hour=0;minute=0;second=0;
    }
    sleep(1);
  }
}
